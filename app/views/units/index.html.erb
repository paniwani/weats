<h1>Listing units</h1>

<table>
  <tr>
    <th>Recipe name</th>
    <th>Shopping name</th>
    <th>Type</th>
    <th>Conversion</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @units.each do |unit| %>
  <tr>
    <td><%= unit.recipe_name %></td>
    <td><%= unit.shopping_name %></td>
    <td><%= unit.type %></td>
    <td><%= unit.conversion %></td>
    <td><%= link_to 'Show', unit %></td>
    <td><%= link_to 'Edit', edit_unit_path(unit) %></td>
    <td><%= link_to 'Destroy', unit, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

